            © {{currentYear}} Blue Altair GCP Newsletter. All rights reserved.
        </div>
    </div>

    <script>
        // Your JavaScript functions here (same as in your HTML)
        function toggleDetails(button) {
            const container = button.closest('.expandable');
            const wasExpanded = container.classList.contains('expanded');

            // Close all expandable elements
            document.querySelectorAll('.expandable').forEach(el => {
                el.classList.remove('expanded');
            });

            // Open clicked element if it wasn't already expanded
            if (!wasExpanded) {
                container.classList.add('expanded');
            }
        }

        function toggleSecurityDetails(button) {
            const view = document.getElementById('view');
            const close = document.getElementById('close');

            if (close.style.display === "none") {
                close.style.display = "block";
            } else {
                close.style.display = "none";
            }

            if (view.style.display === "none") {
                view.style.display = "block";
            } else {
                view.style.display = "none";
            }

            const container = button.closest('.expandable');
            const wasExpanded = container.classList.contains('expanded');

            document.querySelectorAll('.expandable').forEach(el => {
                el.classList.remove('expanded');
            });

            if (!wasExpanded) {
                container.classList.add('expanded');
            }
        }

        function closeDetails() {
            document.querySelectorAll('.expandable').forEach(el => {
                el.classList.remove('expanded');
            });
        }

        function closeSecurityDetails(button) {
            const close = document.getElementById('close');
            const view = document.getElementById('view');
            if (view.style.display === "none") {
                view.style.display = "block";
            } else {
                view.style.display = "none";
            }
            if (close.style.display === "none") {
                close.style.display = "block";
            } else {
                close.style.display = "none";
            }
            document.querySelectorAll('.expandable').forEach(el => {
                el.classList.remove('expanded');
            });
        }
    </script>
