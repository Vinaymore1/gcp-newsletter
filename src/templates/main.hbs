                </div>
                <div class="leader-quote">
                    "{{leadershipMessage.content}}"
                </div>
            </div>
        </div>

        <!-- Featured Updates Section -->
        <div class="section">
            <div class="section-title">Featured Updates & Announcements</div>
            <div class="updates-grid">
                {{#each featuredUpdates}}
                <div class="update-card expandable">
                    {{!-- <div class="update-icon"><span>{{add @index 1}}</span></div> --}}
                    <div class="update-title">{{title}}</div>
                    <div class="update-description">{{description}}</div>
                    <div class="learn-more extend" onclick="toggleDetails(this)">Learn more</div>
                    <div class="expanded-content">
                        <div class="close-btn" onclick="closeDetails()">Close</div>
                        <h2>{{title}}</h2>
                        <p>{{details}}</p>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <!-- Blue Altair's GCP Initiatives -->
        <div class="section">
            <div class="section-title">Blue Altair's GCP Initiatives</div>
            <div class="initiatives-grid">
                {{#each initiatives}}
                <div class="initiative-card expandable">
                    <img src="{{image}}" alt="{{title}}" class="initiative-image">
                    <div class="initiative-content">
                        <div class="extend" onclick="toggleDetails(this)">
                            <div class="initiative-title">{{title}}</div>
                            <div class="initiative-description">{{description}}</div>
                        </div>
                        <div class="expanded-content">
                            <h2>{{title}}</h2>
                            <p>{{details}}</p>
                            <div class="close-btn" onclick="closeDetails()">Close</div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <!-- Security Updates Section -->
        <div class="section">
            <div class="section-title">Security Updates</div>
            <div class="security-alert expandable">
                <div class="alert-content">
                    <div class="alert-title">{{securityUpdate.title}}</div>
                    <div class="alert-description">{{securityUpdate.description}}</div>
                    <button class="alert-button-view" id="view" onclick="toggleSecurityDetails(this)">View
                        Details</button>
                    <button class="alert-button-view" id="close" onclick="closeSecurityDetails(this)"
                        style="display: none;">Close Details</button>
                </div>
                <div class="expanded-content">
                    <h2>{{securityUpdate.title}} Details</h2>
                    <p>{{securityUpdate.details}}</p>
                    {{#if securityUpdate.keyChanges}}
                    <p>Key changes include:</p>
                    <ul>
                        {{#each securityUpdate.keyChanges}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>

        <!-- Technical Insights Section -->
        <div class="section">
            <div class="section-title">Technical Insights</div>
            <div class="tip-container">
                <div class="tip-header">
                    <div class="tip-icon">💡</div>
                    <div class="tip-title">Tip of the Month</div>
                </div>
                <div class="tip-content">{{technicalTip}}</div>
            </div>
        </div>

        <!-- Learning & Events Section -->
        <div class="section">
            <div class="section-title">Learning & Events</div>

            <!-- Learnings Section -->
            {{#if learnings.length}}
            <div style="font-size: medium; font-family: nunito; font-style: italic; font-weight: bold;">🎓 Learnings:
            </div>
            <div class="events-grid">
                {{#each learnings}}
                <div class="event-card">
                    <div class="event-title">{{title}}</div>
                    <div class="event-description">{{description}}</div>
                    <a href="{{link}}">
                        <div class="learn-more">View More</div>
                    </a>
                </div>
                {{/each}}
            </div>
            {{/if}}

            <!-- Events Section -->
            {{#if events.length}}
            <div
                style="margin-top: 12px; font-size: medium; font-family: nunito; font-style: italic; font-weight: bold;">
                🗓️ Events:
            </div>
            <div class="events-grid">
                {{#each events}}
                <div class="event-card">
                    <div class="event-title">{{title}}</div>
                    <div class="event-description">{{description}}</div>
                    <a href="{{link}}">
                        <div class="learn-more">View More</div>
                    </a>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>

        <!-- Certification Spotlight Section -->
        <div class="section">
            <div class="section-title">Certification Spotlight</div>
            <div class="spotlight-container">
                {{#each certifications}}
                <div class="spotlight-card">
